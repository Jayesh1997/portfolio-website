<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>


<style>
    body {
      background-image: url('Assets/images/background.jpg');
      background-size: cover;
    }
  </style>

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-9">
            <h1><%= title %></h1>

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/business-contact-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i>  Add Contact</a>
            <% } %>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-2">Contact Name</th>
                        <th class="text-center col-2">Contact Number</th>
                        <th class="text-center col-8">Email-ID</th>
                        
                    <% } else { %>
                        <th class="text-center col-2">Contact Name</th>
                        <th class="text-center col-2">Contact Number</th>
                        <th class="text-center col-8">Email-ID</th>

                    <% } %>
                </tr>

                <% for(let count = 0; count < BusinessList.length; count++) { %>
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-2"><%= BusinessList[count].contact_name %></td>
                            <td class="text-center col-2"><%= BusinessList[count].contact_number %></td>
                            <td class="text-center col-8"><%= BusinessList[count].email_address %></td>                                   
                            <td class="text-center col-2">
                                <a href="/business-contact-list/edit/<%= BusinessList[count]._id %>" class="btn btn-sm">
                                <i class="fas fa-pencil-alt"></i> Update</a>
                            </td>
                            <td class="text-center col-2">
                                <a href="/business-contact-list/delete/<%= BusinessList[count]._id %>" class="btn btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                         <% } else { %>
                            <td class="text-center col-2"><%= BusinessList[count].contact_name %></td>
                            <td class="text-center col-2"><%= BusinessList[count].contact_number %></td>
                            <td class="text-center col-8"><%= BusinessList[count].email_address %></td>
                         <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





